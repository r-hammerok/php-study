{% extends "base.twig" %}
{% block title %}Edit Form{% endblock %}
{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-4">
                <p class="h3 text-center px-4">Change user data</p>
                <form class="form register-form" action="/{{ formAction is defined ? formAction : '' }}"
                      enctype="multipart/form-data"  method="post">
                    <div class="form-group">
                        {% set value = defaultValues['name'] is defined ? defaultValues['name'] : '' %}
                        <label for="inputName">Name</label>
                        <input id="inputName" type="text" class="form-control" name="name"
                               placeholder="Enter name" value="{{ value }}">
                    </div>
                    <div class="form-group">
                        {% set value = defaultValues['email'] is defined ? defaultValues['email'] : '' %}
                        <label for="inputEmail">Email address</label>
                        <input id="inputEmail" type="email" class="form-control" name="email"
                               placeholder="Enter email" value="{{ value }}">
                    </div>
                    <div class="form-group">
                        <label>Photo or avatar</label>
                        {% if defaultValues['photo'] is empty %}
                            <div class="photo no-photo">No Photo</div>
                        {% else %}
                            <div class="photo">
                                <img src="{{ [imgSRC, defaultValues['photo']]|join }}" alt="User photo">
                            </div>
                        {% endif %}
                        <input type="file" class="form-control-file" id="photo" name="photo" accept=".png, .gif, .jpg, .jpeg">
                    </div>
                    <div class="form-row">
                        <div class="col text-right">
                            <button type="submit" class="btn btn-primary mr-2">Save</button>
                            <button type="submit" name="cancel" class="btn btn-dark">Cancel</button>
                        </div>
                    </div>
                </form>
                <p class="render-note">Made with Twig</p>
                {% if errors is defined %}
                    <div class="errors">
                        {% for error in errors %}
                            <div class="alert alert-danger" role="alert">
                                {{ error }}
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}